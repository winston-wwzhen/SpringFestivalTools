/* pages-gala/platforms/index.wxss */
.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  color: #fff;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 平台列表 */
.platform-list {
  padding: 24rpx 32rpx;
}

.platform-card {
  background: #fff;
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
}

/* 卡片封面 */
.card-cover {
  position: relative;
  height: 320rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  background: rgba(230, 57, 70, 0.95);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
}

.live-dot {
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 卡片内容 */
.card-body {
  padding: 32rpx;
}

.platform-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.platform-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.platform-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 节目数量 */
.program-count {
  display: flex;
  align-items: baseline;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.count-num {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-right: 8rpx;
}

.count-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 标签 */
.platform-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(244, 162, 97, 0.1));
  border-radius: 24rpx;
  font-size: 22rpx;
  color: var(--primary-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
