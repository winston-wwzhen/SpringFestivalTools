<!--pages-emoticon/categories/index.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">😄 马年表情包</text>
    <text class="page-subtitle">拜年必备，让祝福更生动</text>
  </view>

  <!-- 分类网格 -->
  <view class="category-grid">
    <view class="category-card" wx:for="{{categories}}" wx:key="id" bindtap="goToGallery" data-id="{{item.id}}">
      <view class="card-cover">
        <image class="cover-image" src="{{item.cover}}" mode="aspectFill"></image>
        <view class="card-count">{{item.count}}张</view>
      </view>
      <view class="card-body">
        <view class="category-name">{{item.name}}</view>
        <view class="category-desc">{{item.description}}</view>
      </view>
    </view>
  </view>

  <!-- 热门推荐 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">🔥 热门推荐</text>
    </view>
    <scroll-view class="hot-scroll" scroll-x enhanced show-scrollbar="{{false}}">
      <view class="hot-item" wx:for="{{hotEmoticons}}" wx:key="id" wx:for-item="emoticon" bindtap="previewEmoticon" data-url="{{emoticon.url}}">
        <image class="hot-image" src="{{emoticon.url}}" mode="aspectFill"></image>
        <view class="hot-title">{{emoticon.title}}</view>
      </view>
    </scroll-view>
  </view>

  <!-- 使用说明 -->
  <view class="tips">
    <view class="tips-title">💡 使用说明</view>
    <view class="tips-list">
      <view class="tips-item">• 点击表情包可预览大图</view>
      <view class="tips-item">• 长按图片可保存到相册</view>
      <view class="tips-item">• 可在微信聊天中直接发送</view>
    </view>
  </view>
</view>