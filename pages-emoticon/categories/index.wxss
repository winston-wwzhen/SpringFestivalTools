/* pages-emoticon/categories/index.wxss */
.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #F4A261, #E76F51);
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  color: #fff;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
}

.category-card {
  background: #fff;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.card-cover {
  position: relative;
  height: 240rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.card-count {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
}

.card-body {
  padding: 24rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 热门推荐 */
.section {
  margin: 0 32rpx 32rpx;
  background: #fff;
  border-radius: var(--radius-md);
  padding: 32rpx;
  box-shadow: var(--shadow-sm);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.hot-scroll {
  white-space: nowrap;
}

.hot-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  vertical-align: top;
}

.hot-item:last-child {
  margin-right: 0;
}

.hot-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
}

.hot-title {
  font-size: 24rpx;
  color: var(--text-primary);
  text-align: center;
  white-space: normal;
}

/* 提示 */
.tips {
  margin: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(244, 162, 97, 0.1), rgba(231, 111, 81, 0.1));
  border-radius: var(--radius-md);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-item {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
