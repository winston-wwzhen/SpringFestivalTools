<!--components/empty-state/empty-state.wxml-->
<view class="empty-state">
  <image class="empty-state__image" src="{{image || '/images/empty.png'}}" mode="aspectFit"></image>
  <text class="empty-state__title">{{title || '暂无数据'}}</text>
  <text class="empty-state__desc" wx:if="{{description}}">{{description}}</text>
  <view class="empty-state__action" wx:if="{{showButton}}">
    <view class="empty-state__btn" bindtap="onButtonTap">{{buttonText || '重新加载'}}</view>
  </view>
</view>
