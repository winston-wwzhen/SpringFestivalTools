<!--components/nav-bar/nav-bar.wxml-->
<view class="custom-nav-bar" style="height: {{totalHeight}}px; background: {{bgColor}};">
  <!-- 状态栏占位 -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>

  <!-- 导航栏内容 -->
  <view class="nav-content" style="height: {{navBarHeight}}px;">
    <!-- 返回按钮 -->
    <view wx:if="{{showBack}}" class="nav-back" bindtap="onBack">
      <text class="back-icon">‹</text>
    </view>

    <!-- 标题 -->
    <view class="nav-title" style="{{showBack ? 'left: 80rpx;' : ''}}">
      <text>{{title}}</text>
    </view>
  </view>
</view>
