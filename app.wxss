/* app.wxss - 全局样式 */

/* 全局变量 */
page {
  --primary-color: #E63946;
  --secondary-color: #F4A261;
  --accent-color: #2A9D8F;
  --bg-color: #F8F9FA;
  --card-bg: #FFFFFF;
  --text-primary: #1D3557;
  --text-secondary: #6C757D;
  --text-light: #ADB5BD;
  --border-color: #DEE2E6;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;

  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

/* 全局重置 */
view, text, button, input, textarea, scroll-view {
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 通用卡片 */
.card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.card__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.card__content {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 48rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn--primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn--secondary {
  background: var(--secondary-color);
  color: #FFFFFF;
}

.btn--outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn--small {
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.btn--large {
  padding: 28rpx 64rpx;
  font-size: 32rpx;
}

.btn--block {
  width: 100%;
  display: flex;
}

/* 文本样式 */
.text--primary {
  color: var(--primary-color);
}

.text--secondary {
  color: var(--text-secondary);
}

.text--light {
  color: var(--text-light);
}

.text--bold {
  font-weight: 600;
}

.text--large {
  font-size: 36rpx;
}

.text--small {
  font-size: 24rpx;

}

.text--center {
  text-align: center;
}

/* 间距工具类 */
.mt--xs { margin-top: 8rpx; }
.mt--sm { margin-top: 16rpx; }
.mt--md { margin-top: 24rpx; }
.mt--lg { margin-top: 32rpx; }
.mt--xl { margin-top: 48rpx; }

.mb--xs { margin-bottom: 8rpx; }
.mb--sm { margin-bottom: 16rpx; }
.mb--md { margin-bottom: 24rpx; }
.mb--lg { margin-bottom: 32rpx; }
.mb--xl { margin-bottom: 48rpx; }

.pt--xs { padding-top: 8rpx; }
.pt--sm { padding-top: 16rpx; }
.pt--md { padding-top: 24rpx; }
.pt--lg { padding-top: 32rpx; }
.pt--xl { padding-top: 48rpx; }

.pb--xs { padding-bottom: 8rpx; }
.pb--sm { padding-bottom: 16rpx; }
.pb--md { padding-bottom: 24rpx; }
.pb--lg { padding-bottom: 32rpx; }
.pb--xl { padding-bottom: 48rpx; }

/* Flex 工具类 */
.flex {
  display: flex;
}

.flex--column {
  flex-direction: column;
}

.flex--center {
  align-items: center;
  justify-content: center;
}

.flex--between {
  align-items: center;
  justify-content: space-between;
}

.flex--wrap {
  flex-wrap: wrap;
}

.flex--1 {
  flex: 1;
}

/* 加载中状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-light);
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  color: var(--text-light);
}

.empty__icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty__text {
  font-size: 28rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 32rpx 0;
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 22rpx;
}

.tag--primary {
  background: rgba(230, 57, 70, 0.1);
  color: var(--primary-color);
}

.tag--secondary {
  background: rgba(244, 162, 97, 0.1);
  color: var(--secondary-color);
}

.tag--success {
  background: rgba(42, 157, 143, 0.1);
  color: var(--accent-color);
}
