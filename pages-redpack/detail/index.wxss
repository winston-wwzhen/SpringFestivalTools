/* pages-redpack/detail/index.wxss */
.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 140rpx;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
}

.platform-info {
  display: flex;
  align-items: center;
}

.platform-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #fff;
}

.platform-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

/* 标题 */
.title-section {
  padding: 40rpx 32rpx 24rpx;
  background: #fff;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.reward {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(244, 162, 97, 0.1));
  border-radius: 48rpx;
}

.reward-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.reward-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

/* 时间 */
.time-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: #fff;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.time-item {
  flex: 1;
  text-align: center;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.time-value {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.time-divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
}

/* 标签 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 0 32rpx 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(244, 162, 97, 0.1));
  border-radius: 24rpx;
  font-size: 22rpx;
  color: var(--primary-color);
}

/* 核心数据 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: linear-gradient(135deg, #2A9D8F, #264653);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 描述 */
.desc-section {
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: #fff;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.desc-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

/* 内容区块 */
.content-section {
  margin: 0 32rpx 24rpx;
}

.accordion-item {
  background: #fff;
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.accordion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.accordion-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.accordion-arrow {
  font-size: 24rpx;
  color: var(--text-light);
  transition: transform 0.3s;
}

.accordion-arrow.expanded {
  transform: rotate(180deg);
}

.accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.accordion-content.show {
  max-height: 5000rpx;
}

.rules-text {
  display: block;
  padding: 0 32rpx 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 2;
  white-space: pre-line;
}

/* 步骤 */
.steps-list {
  padding: 0 32rpx 32rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-dot {
  min-width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.step-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  padding-top: 6rpx;
}

/* 技巧 */
.tips-list {
  padding: 0 32rpx 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tip-dot {
  font-size: 32rpx;
  color: var(--accent-color);
  margin-right: 12rpx;
  line-height: 1.5;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-share,
.btn-primary {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-share {
  background: #f5f5f5;
  color: var(--text-primary);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: #fff;
}

.btn-primary::after {
  border: none;
}
