/* pages-kinship/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* 灯笼装饰 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* 输入区域 */
.input-section {
  padding: 220rpx 32rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
  text-align: center;
}

.input-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-bottom: 24rpx;
}

.input-group {
  position: relative;
  margin-bottom: 24rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  padding: 0 80rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
  color: #333;
}

.clear-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(211, 47, 47, 0.1);
  border-radius: 50%;
  font-size: 28rpx;
  color: #D32F2F;
}

.btn-calculate {
  background: linear-gradient(135deg, #FFD700, #FFC107);
  border-radius: 24rpx;
  padding: 28rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #D32F2F;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.3);
}

.btn-calculate.loading {
  background: linear-gradient(135deg, #ccc, #999);
  opacity: 0.7;
}

/* 快捷示例 */
.examples-section {
  padding: 0 32rpx 24rpx;
}

.examples-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.examples-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.example-tag {
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 32rpx;
  border: 1rpx solid #FFD700;
  font-size: 24rpx;
  color: #D32F2F;
}

/* 结果区域 */
.result-section {
  padding: 0 32rpx 32rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  text-align: center;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  padding: 48rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '福';
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 120rpx;
  color: #D32F2F;
  opacity: 0.05;
  font-weight: 700;
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 16rpx;
}

.result-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #D32F2F;
  margin-bottom: 12rpx;
}

.result-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 说明 */
.tips-section {
  margin: 32rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-item {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
