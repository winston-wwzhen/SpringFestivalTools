/* pages/toolbox/fortune/index.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(to bottom, #B71C1C 0, #B71C1C 80rpx, #FFF8E7 80rpx);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  position: relative;
  padding: 40rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #B71C1C 0%, #D32F2F 100%);
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
  background-image: radial-gradient(#fff 1px, transparent 1px);
  background-size: 30rpx 30rpx;
}

.header-content {
  position: relative;
  z-index: 2;
}

.title {
  font-size: 52rpx;
  font-weight: 800;
  color: #FFD700;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 26rpx;
  color: #FFF8E7;
  opacity: 0.9;
}

/* 表单区域 */
.form-section {
  padding: 24rpx 32rpx;
  margin-top: 20rpx;
  position: relative;
  z-index: 10;
}

.form-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.label {
  font-size: 28rpx;
  color: #D32F2F;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  font-size: 32rpx;
  color: #333;
}

.picker {
  font-size: 32rpx;
  color: #333;
}

.picker.placeholder {
  color: #999;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  color: #333;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.radio-item.active {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-color: #FFD700;
  color: #D32F2F;
}

.radio-icon {
  font-size: 24rpx;
}

/* 关键字选择 */
.keyword-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.keyword-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx 8rpx;
  border-radius: 16rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
  background: #fff;
}

.keyword-item.active {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-color: #FFD700;
  transform: scale(1.05);
}

.keyword-icon {
  font-size: 36rpx;
}

.keyword-text {
  font-size: 22rpx;
  color: #666;
}

.keyword-item.active .keyword-text {
  color: #D32F2F;
  font-weight: 600;
}

.keyword-hint {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.btn-calculate {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #D32F2F, #B71C1C);
  color: #FFD700;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 50rpx;
  padding: 28rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.3);
}

.btn-calculate[disabled] {
  opacity: 0.6;
}

/* 结果区域 */
.result-section {
  padding: 0 32rpx;
}

.result-header {
  text-align: center;
  padding: 30rpx 0;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #D32F2F;
}

.fortune-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
  text-align: center;
}

.fortune-card.overall {
  background: linear-gradient(135deg, #FFF8F0, #FFF8E7);
  border: 2rpx solid rgba(255, 215, 0, 0.3);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #D32F2F;
  margin-bottom: 20rpx;
}

.star-rating {
  font-size: 48rpx;
  color: #FFD700;
  letter-spacing: 8rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(211, 47, 47, 0.2);
}

.fortune-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 运势列表 */
.fortune-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.fortune-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.fortune-item:last-child {
  margin-bottom: 0;
}

.fortune-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.fortune-bar {
  flex: 1;
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700, #D32F2F);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.fortune-value {
  width: 80rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #D32F2F;
  flex-shrink: 0;
}

/* 幸运元素 */
.lucky-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.lucky-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #D32F2F;
  margin-bottom: 24rpx;
}

.lucky-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.lucky-item {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 215, 0, 0.3);
}

.lucky-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.lucky-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #D32F2F;
}

/* 建议 */
.advice-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.advice-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #D32F2F;
  margin-bottom: 16rpx;
}

.advice-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
