/* pages/toolbox/simulator/index.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(to bottom, #B71C1C 0, #B71C1C 60rpx, #FFF8E7 60rpx);
  padding-bottom: 40rpx;
}

/* 剧本选择界面 */
.script-selection {
  padding: 40rpx 32rpx;
}

.header-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-section .title {
  font-size: 44rpx;
  font-weight: 800;
  color: #FFD700;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.header-section .subtitle {
  font-size: 26rpx;
  color: #FFF8E7;
  opacity: 0.9;
}

.script-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.script-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.2);
  transition: all 0.3s;
}

.script-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.15);
}

.script-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.script-info {
  flex: 1;
}

.script-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.script-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.script-arrow {
  font-size: 48rpx;
  color: #D32F2F;
  font-weight: 300;
  opacity: 0.5;
}

/* 游戏容器 */
.game-container {
  padding: 24rpx 32rpx;
}

/* 状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.month-indicator {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  background: linear-gradient(135deg, #D32F2F, #B71C1C);
  color: #FFD700;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
}

.month-number {
  font-size: 36rpx;
  font-weight: 800;
}

.month-text {
  font-size: 20rpx;
  font-weight: 600;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700, #D32F2F);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

/* 属性面板 */
.stats-panel {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.stat-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.stat-icon {
  font-size: 32rpx;
  width: 40rpx;
  flex-shrink: 0;
}

.stat-bar {
  flex: 1;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 16rpx;
}

.stat-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease, background 0.3s;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #D32F2F;
  width: 40rpx;
  text-align: right;
  flex-shrink: 0;
}

/* 事件卡片 */
.event-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.event-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.event-month {
  font-size: 48rpx;
  font-weight: 900;
  color: #D32F2F;
  display: block;
  margin-bottom: 8rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.event-content {
  background: linear-gradient(135deg, #FFF8F0, #FFF8E7);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.2);
}

.event-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.option-item:active {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-color: #FFD700;
  transform: translateX(8rpx);
}

.option-dot {
  width: 12rpx;
  height: 12rpx;
  background: #D32F2F;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 结局界面 */
.ending-container {
  padding: 40rpx 32rpx;
}

.ending-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.ending-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
}

.ending-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #D32F2F;
  display: block;
}

.ending-desc {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 最终属性 */
.final-stats {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.final-stat-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.final-stat-item:last-child {
  margin-bottom: 0;
}

.final-stat-icon {
  font-size: 40rpx;
  width: 50rpx;
  flex-shrink: 0;
}

.final-stat-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 16rpx;
}

.final-stat-label {
  font-size: 28rpx;
  color: #666;
}

.final-stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #D32F2F;
}

.final-stat-bar {
  width: 120rpx;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.final-stat-fill {
  height: 100%;
  border-radius: 6rpx;
}

/* 年度回顾 */
.year-review {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.review-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #D32F2F;
  margin-bottom: 20rpx;
}

.review-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.review-item {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 12rpx;
  border-left: 4rpx solid #FFD700;
}

.review-month {
  font-size: 24rpx;
  color: #D32F2F;
  font-weight: 600;
  width: 60rpx;
  flex-shrink: 0;
}

.review-choice {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

/* 操作按钮 */
.ending-actions {
  display: flex;
  gap: 16rpx;
}

.btn-restart, .btn-share {
  flex: 1;
  background: linear-gradient(135deg, #D32F2F, #B71C1C);
  color: #FFD700;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 50rpx;
  padding: 24rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.1);
}
