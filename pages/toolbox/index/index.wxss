/* pages/toolbox/index/index.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 180rpx, #FFF8E7 180rpx);
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header {
  position: relative;
  overflow: hidden;
  padding: 140rpx 40rpx 60rpx 40rpx;
  background: linear-gradient(135deg, #B71C1C 0%, #D32F2F 50%, #FF5252 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.3);
}

/* 背景装饰 */
.header__bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}

.bg-circle--1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -80rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.bg-circle--2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -100rpx;
  left: -60rpx;
  background: radial-gradient(circle, rgba(255, 224, 178, 0.15) 0%, transparent 60%);
}

.bg-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
  background-image: radial-gradient(#fff 1px, transparent 1px);
  background-size: 30rpx 30rpx;
}

.header__content {
  position: relative;
  z-index: 2;
}

.header__top {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 56rpx;
  font-weight: 800;
  color: #FFD700;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.header__desc {
  margin-top: 16rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #FFF8E7;
  opacity: 0.9;
}

/* 功能列表 */
.tools {
  padding: 24rpx 32rpx;
  padding-top: 60rpx;
}

.tool-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tool-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #FFD700, #D32F2F);
}

.tool-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.15);
}

.tool-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.2));
}

.tool-info {
  flex: 1;
}

.tool-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.tool-arrow {
  font-size: 48rpx;
  color: #D32F2F;
  font-weight: 300;
  opacity: 0.5;
  flex-shrink: 0;
}

/* 使用提示 */
.tips {
  padding: 0 32rpx;
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(211, 47, 47, 0.08);
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
