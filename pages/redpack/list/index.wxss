}

.time-info .icon,
.reward-amount .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.reward-amount {
  color: #D32F2F;
  font-weight: 600;
  font-size: 26rpx;
}

/* Ê†áÁ≠æ */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
  position: relative;
  z-index: 1;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #D32F2F;
  border: 1rpx solid #FFD700;
  font-weight: 500;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
