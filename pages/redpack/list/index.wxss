  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #FFD700;
  position: relative;
  z-index: 1;
}

.time-info,
.reward-amount {
  display: flex;
  align-items: center;
  font-size: 24rpx;
