/* pages-redpack/list/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8E7 0%, #FFF5E6 100%);
  padding-bottom: 120rpx;
  padding-top: 220rpx;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  position: relative;
}

/* Ë£ÖÈ•∞ÁÅØÁ¨º */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 16rpx;
  animation-delay: 0s;
}

.lantern-right {
  right: 16rpx;
  animation-delay: 1.5s;
}

@keyframes swing {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

/* ÊêúÁ¥¢Ê†è */
.search-bar {
  padding: 24rpx 32rpx;
  background: transparent;
}

.search-input {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
  position: relative;
  overflow: hidden;
}

.search-input::before {
  content: 'üßß';
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  font-size: 80rpx;
  opacity: 0.05;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #D32F2F;
}

.search-input input::placeholder {
  color: #999;
}

.search-decoration {
  font-size: 32rpx;
  margin-left: 8rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* Á≠õÈÄâÊ†áÁ≠æ - ‰ºòÂåñÁâà */
.filter-tabs {
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx 32rpx;
  gap: 20rpx;
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  background: #fff;
  border-radius: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease-in-out;
  font-weight: 500;
  border: 1rpx solid transparent; /* È¢ÑÁïôËæπÊ°Ü‰ΩçÁΩÆÈÅøÂÖçÊäñÂä® */
}

.tab-item:active {
  transform: scale(0.96);
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(135deg, #D32F2F 0%, #FF5252 100%);
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.3);
  font-weight: 600;
  border: none;
}

/* Ê¥ªÂä®ÂàóË°® */
.activity-list {
  padding: 0 32rpx 32rpx;
}

.activity-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 20rpx rgba(211, 47, 47, 0.12);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.activity-card::before {
  content: '';
  position: absolute;
  top: 50rpx;
  right: 0rpx;
  width: 90rpx;
  height: 90rpx;
  border: 3rpx solid #D32F2F;
  border-radius: 50%;
  opacity: 0.08;
  z-index: 0;
}

.activity-card::after {
  content: 'Á¶è';
  position: absolute;
  top: 60rpx;
  right: 10rpx;
  font-size: 80rpx;
  font-family: "KaiTi", "STKaiti", "Ê•∑‰Ωì", serif;
  color: #D32F2F;
  opacity: 0.1;
  font-weight: 900;
  z-index: 0;
}

.activity-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.2);
}

/* Âç°ÁâáÂ§¥ÈÉ® */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.platform-icon {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #FFD700;
  padding: 4rpx;
}

.platform-emoji {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 50%;
  border: 2rpx solid #FFD700;
}

.platform-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #D32F2F;
}

.status-tag {
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-ongoing {
  background: linear-gradient(135deg, #FF6B6B, #EE5A5A);
  color: #fff;
  border: 1rpx solid #FFD700;
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.3);
}

.status-upcoming {
  background: linear-gradient(135deg, #4ECDC4, #44A08D);
  color: #fff;
  border: 1rpx solid #FFD700;
  box-shadow: 0 2rpx 8rpx rgba(78, 205, 196, 0.3);
}

.status-ended {
  background: linear-gradient(135deg, #95A5A6, #7F8C8D);
  color: #fff;
  border: 1rpx solid #BDC3C7;
}

/* Âç°ÁâáÂÜÖÂÆπ */
.card-body {
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.activity-title {
  font-size: 34rpx;
