  color: #D32F2F;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.activity-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* Âç°ÁâáÂ∫ïÈÉ® */
.card-footer {
  display: flex;
