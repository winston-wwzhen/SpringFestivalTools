/* pages-redpack/detail/index.wxss */
.container {
  min-height: 100vh;
  background: #FFF8E7;
  padding-bottom: 200rpx;
  padding-top: 220rpx;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  position: relative;
}

/* 装饰灯笼 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 240rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 16rpx;
  animation-delay: 0s;
}

.lantern-right {
  right: 16rpx;
  animation-delay: 1.5s;
}

@keyframes swing {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #D32F2F, #E53935);
  border-bottom: 2rpx solid #FFD700;
}

.platform-info {
  display: flex;
  align-items: center;
}

.platform-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #fff;
}

.platform-emoji {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 16rpx;
}

.platform-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.status-badge.status-ongoing {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
}

.status-badge.status-upcoming {
  background: linear-gradient(135deg, #FF9800, #FFA726);
}

.status-badge.status-ended {
  background: rgba(255, 255, 255, 0.3);
}

/* 标题 */
.title-section {
  padding: 40rpx 32rpx 24rpx;
  background: #fff;
  border-bottom: 2rpx solid #FFD700;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #D32F2F;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.reward {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 48rpx;
  border: 2rpx solid #FFD700;
}

.reward-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.reward-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #D32F2F;
}

/* 倒计时 */
.countdown-section {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  margin: 24rpx 32rpx;
  background: linear-gradient(135deg, #FF5722, #FF7043);
  border-radius: var(--radius-lg);
  box-shadow: 0 8rpx 24rpx rgba(255, 87, 34, 0.3);
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 8rpx 24rpx rgba(255, 87, 34, 0.3); }
  50% { box-shadow: 0 8rpx 32rpx rgba(255, 87, 34, 0.5); }
}

.countdown-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  animation: shake 0.5s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.countdown-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.countdown-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 4rpx;
}

.countdown-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

/* 时间 */
.time-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: #fff;
  border-radius: var(--radius-md);
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.12);
}

.time-item {
  flex: 1;
  text-align: center;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.time-value {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.time-divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
}

/* 标签 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 0 32rpx 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(244, 162, 97, 0.1));
  border-radius: 24rpx;
  font-size: 22rpx;
  color: var(--primary-color);
}

/* 核心数据 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: linear-gradient(135deg, #2A9D8F, #264653);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 描述 */
.desc-section {
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  background: #fff;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.desc-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

/* 内容区块 */
.content-section {
  margin: 0 32rpx 24rpx;
}

.accordion-item {
  background: #fff;
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.accordion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  transition: background 0.3s;
}

.accordion-header:active {
  background: #f5f5f5;
}

.accordion-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.accordion-arrow {
  font-size: 24rpx;
  color: var(--text-light);
  transition: transform 0.3s ease;
}

.accordion-arrow.expanded {
  transform: rotate(180deg);
}

.accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.accordion-content.show {
  max-height: 5000rpx;
}

.rules-text {
  display: block;
  padding: 0 32rpx 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 2;
  white-space: pre-line;
}

/* 口令码 */
.code-section {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid #FFD700;
}

.code-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx dashed rgba(211, 47, 47, 0.2);
}

.code-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.code-copy-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 32rpx;
  transition: transform 0.2s, opacity 0.2s;
}

.code-copy-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.copy-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.copy-text {
  font-size: 24rpx;
  color: #fff;
}

.code-content {
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.5);
}

.code-text {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
  letter-spacing: 2rpx;
  text-align: center;
  font-family: 'Courier New', monospace;
}

/* 步骤 */
.steps-list {
  padding: 0 32rpx 32rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-dot {
  min-width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
}

.step-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  padding-top: 6rpx;
}

/* 技巧 */
.tips-list {
  padding: 0 32rpx 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tip-dot {
  font-size: 32rpx;
  color: var(--accent-color);
  margin-right: 12rpx;
  line-height: 1.5;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.btn-service,
.btn-share {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: transform 0.2s, box-shadow 0.2s;
}

.btn-service::after,
.btn-share::after {
  border: none;
}

.btn-service:active,
.btn-share:active {
  transform: scale(0.97);
}

.btn-service {
  background: linear-gradient(135deg, #f5f5f5, #eeeeee);
  color: var(--text-primary);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-share {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.35);
}
