/* pages-gala/platforms/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* 灯笼装饰 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* 平台列表 */
.platform-list {
  padding: 24rpx 32rpx;
  padding-top: 220rpx;
}

.platform-card {
  background: #fff;
  border-radius: 16rpx;
  border: 1rpx solid #FFD700;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(211, 47, 47, 0.12);
  position: relative;
}

.platform-card::before {
  display: none;
}

.card-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: 2rpx solid rgba(211, 47, 47, 0.15);
  border-radius: 50%;
  font-family: "KaiTi", "STKaiti", "楷体", "Georgia", serif;
  font-size: 32rpx;
  font-weight: 700;
  color: rgba(211, 47, 47, 0.2);
  line-height: 1;
  pointer-events: none;
}

.card-badge::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  border: 1rpx solid rgba(211, 47, 47, 0.1);
  border-radius: 50%;
}

.card-badge::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background-image:
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 2rpx,
      rgba(211, 47, 47, 0.02) 2rpx,
      rgba(211, 47, 47, 0.02) 4rpx
    );
  border-radius: 50%;
  pointer-events: none;
}

/* 卡片内容 */
.card-body {
  padding: 20rpx;
}

.platform-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.platform-logo {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 16rpx;
  margin-right: 16rpx;
  font-size: 40rpx;
  border: 1rpx solid #FFD700;
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.live-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(230, 57, 70, 0.95);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  white-space: nowrap;
}

.live-badge::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 6rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.platform-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 节目数量 */
.program-count {
  display: flex;
  align-items: baseline;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 12rpx;
}

.count-num {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-right: 6rpx;
}

.count-text {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 标签 */
.platform-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 16rpx;
  border: 1rpx solid #FFD700;
  font-size: 20rpx;
  color: #D32F2F;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
