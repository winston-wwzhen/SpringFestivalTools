/* pages-gala/platforms/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* 灯笼装饰 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* 平台列表 */
.platform-list {
  padding: 24rpx 32rpx;
  padding-top: 220rpx;
}

.platform-card {
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
  position: relative;
}

.platform-card::before {
  content: '春';
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 120rpx;
  color: #D32F2F;
  opacity: 0.05;
  font-weight: 700;
  pointer-events: none;
}

/* 卡片封面 */
.card-cover {
  position: relative;
  height: 320rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  background: rgba(230, 57, 70, 0.95);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
}

.live-dot {
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 卡片内容 */
.card-body {
  padding: 32rpx;
}

.platform-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.platform-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.platform-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 节目数量 */
.program-count {
  display: flex;
  align-items: baseline;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.count-num {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-right: 8rpx;
}

.count-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 标签 */
.platform-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 24rpx;
  border: 1rpx solid #FFD700;
  font-size: 22rpx;
  color: #D32F2F;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
