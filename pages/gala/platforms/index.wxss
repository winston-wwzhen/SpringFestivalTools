/* pages/gala/platforms/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* ÁÅØÁ¨ºË£ÖÈ•∞ */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* Âπ≥Âè∞ÂàóË°® */
.platform-list {
  padding: 24rpx 32rpx;
  padding-top: 220rpx;
}

.platform-card {
  background: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #FFD700;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.12);
  position: relative;
  transition: transform 0.3s, box-shadow 0.3s;
}

.platform-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
}

.card-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border: 3rpx solid rgba(211, 47, 47, 0.2);
  border-radius: 50%;
  font-family: "KaiTi", "STKaiti", "Ê•∑‰Ωì", "Georgia", serif;
  font-size: 36rpx;
  font-weight: 700;
  color: rgba(211, 47, 47, 0.4);
  line-height: 1;
  pointer-events: none;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.1);
}

.card-badge::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right: 8rpx;
  bottom: 8rpx;
  border: 1rpx solid rgba(211, 47, 47, 0.15);
  border-radius: 50%;
}

/* Âç°ÁâáÂÜÖÂÆπ */
.card-body {
  padding: 24rpx;
  position: relative;
}

.card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #FFD700, transparent);
}

.platform-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.platform-logo {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 20rpx;
  margin-right: 20rpx;
  font-size: 44rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.2);
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.live-badge {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #E53935, #F44336);
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(229, 57, 53, 0.3);
}

.live-badge::before {
  content: '';
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(0.9); }
}

.platform-time {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
}

.platform-time::before {
  content: 'üïê';
  margin-right: 6rpx;
  font-size: 20rpx;
}

/* ËäÇÁõÆÊï∞Èáè */
.program-count {
  display: flex;
  align-items: baseline;
  padding: 16rpx 0;
  border-top: 1rpx dashed #FFD700;
  border-bottom: 1rpx dashed #FFD700;
  margin-bottom: 16rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.05), transparent);
}

.count-num {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #D32F2F, #E53935);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-right: 8rpx;
}

.count-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Ê†áÁ≠æ */
.platform-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 20rpx;
  border: 1rpx solid #FFD700;
  font-size: 22rpx;
  color: #D32F2F;
  font-weight: 500;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* Âä†ËΩΩ‰∏≠ */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
