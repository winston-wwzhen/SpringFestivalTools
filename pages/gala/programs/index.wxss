/* pages-gala/programs/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* 灯笼装饰 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* 搜索栏 */
.search-container {
  padding: 180rpx 32rpx 16rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 32rpx;
  padding: 0 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.15);
  border: 2rpx solid #FFD700;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

/* 平台信息 */
.platform-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #fff, #FFFBF0);
  margin: 0 32rpx 16rpx;
  border-radius: 20rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
}

.platform-logo {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 16rpx;
  margin-right: 16rpx;
  font-size: 36rpx;
  border: 2rpx solid #FFD700;
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.platform-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.program-total {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #D32F2F, #E53935);
  color: #fff;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

/* 分类筛选 */
.filter-tabs {
  display: flex;
  padding: 0 32rpx 16rpx;
  gap: 12rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-tab {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #fff;
  border: 2rpx solid #FFD700;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  flex-shrink: 0;
  transition: all 0.3s;
}

.filter-tab text {
  margin-right: 8rpx;
}

.tab-count {
  padding: 2rpx 10rpx;
  background: rgba(211, 47, 47, 0.1);
  border-radius: 12rpx;
  font-size: 20rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.filter-tab.active {
  background: linear-gradient(135deg, #D32F2F, #E53935);
  border-color: #D32F2F;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.3);
}

.filter-tab.active .tab-count {
  background: rgba(255, 255, 255, 0.25);
  color: #fff;
}

/* 节目列表 */
.program-list {
  padding: 0 32rpx;
}

.program-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #FFD700;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.1);
  position: relative;
  overflow: hidden;
  transition: transform 0.2s, box-shadow 0.2s;
}

.program-card::before {
  content: '春';
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 80rpx;
  color: #D32F2F;
  opacity: 0.03;
  font-weight: 700;
  pointer-events: none;
}

.program-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.15);
}

.program-order {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #D32F2F, #E53935);
  color: #fff;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: 700;
  margin-right: 16rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.25);
}

.program-info {
  flex: 1;
  min-width: 0;
}

.program-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 12rpx;
}

.fav-icon {
  flex-shrink: 0;
  font-size: 32rpx;
  color: #ccc;
  transition: transform 0.2s;
  padding: 4rpx;
}

.fav-icon.active {
  color: #FFB300;
  transform: scale(1.1);
}

.program-performers {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.performers-icon {
  margin-right: 6rpx;
  font-size: 20rpx;
}

.program-type {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  white-space: nowrap;
  margin-left: 12rpx;
}

.program-type.type-song,
.program-type.type-dance {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
  color: #1976D2;
  border: 1rpx solid #90CAF9;
}

.program-type.type-comedy,
.program-type.type-skit {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  color: #D32F2F;
  border: 1rpx solid #FFD700;
}

.program-type.type-wushu,
.program-type.type-acrobatics {
  background: linear-gradient(135deg, #F3E5F5, #E1BEE7);
  color: #7B1FA2;
  border: 1rpx solid #CE93D8;
}

.program-type.type-magic {
  background: linear-gradient(135deg, #E0F2F1, #B2DFDB);
  color: #00796B;
  border: 1rpx solid #80CBC4;
}

.program-type.type-default {
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  color: #D32F2F;
  border: 1rpx solid #FFD700;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 6rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-light);
  opacity: 0.7;
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
