/* pages-gala/programs/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #D32F2F 0, #D32F2F 220rpx, #FFF8E7 220rpx);
  padding-bottom: 40rpx;
  position: relative;
}

/* 灯笼装饰 */
.lantern-left,
.lantern-right {
  position: fixed;
  top: 260rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: swing 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(211, 47, 47, 0.3));
}

.lantern-left {
  left: 20rpx;
}

.lantern-right {
  right: 20rpx;
}

@keyframes swing {
  0%,
  100% {
    transform: rotate(-5deg);
  }

  50% {
    transform: rotate(5deg);
  }
}

/* 平台信息 */
.platform-header {
  display: flex;
  align-items: center;
  padding: 220rpx 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 24rpx 32rpx;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
}

.platform-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}

.platform-info {
  flex: 1;
}

.platform-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.platform-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 节目列表 */
.program-list {
  padding: 0 32rpx;
}

.program-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #FFD700;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.15);
  position: relative;
  overflow: hidden;
}

.program-card::before {
  content: '春';
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 100rpx;
  color: #D32F2F;
  opacity: 0.03;
  font-weight: 700;
  pointer-events: none;
}

.program-order {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #D32F2F, #E53935);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.program-info {
  flex: 1;
}

.program-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.program-performers {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.program-type {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF8E7, #FFE4B5);
  border-radius: 24rpx;
  border: 1rpx solid #FFD700;
  font-size: 22rpx;
  color: #D32F2F;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-light);
  opacity: 0.7;
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: var(--text-light);
}
