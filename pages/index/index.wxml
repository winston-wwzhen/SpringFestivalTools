<!--pages/index/index.wxml-->
<view class="page">
  <!-- 自定义导航栏 -->


  <!-- 头部区域 -->
  <view class="header">
    <view class="header__bg">
      <view class="bg-circle bg-circle--1"></view>
      <view class="bg-circle bg-circle--2"></view>
      <view class="bg-circle bg-circle--3"></view>
      <view class="bg-pattern"></view>
    </view>
    <view class="header__content">
      <view class="header__top">
        <view class="greeting">
          <text class="greeting-text">🎊 春节快乐</text>
        </view>
        <view class="year-badge">2026</view>
      </view>
      <view class="countdown">
        <view class="countdown__label">距离马年春节还有</view>
        <view class="countdown__days">{{countdownDays}}</view>
        <view class="countdown__unit">天</view>
      </view>
      <view class="header__tip">
        <text class="tip-icon">🧧</text>
        <text class="tip-text">红包攻略已就位</text>
      </view>

      <!-- 福字装饰 -->
      <view class="fu-decoration">
        <!-- 背景装饰圆 -->
        <view class="fu-bg-circle-1"></view>
        <view class="fu-bg-circle-2"></view>
        <view class="fu-bg-circle-3"></view>

        <!-- 祥云装饰 -->
        <view class="cloud cloud-1">☁</view>
        <view class="cloud cloud-2">☁</view>

        <!-- 鞭炮装饰 -->
        <view class="firework firework-1">🧨</view>
        <view class="firework firework-2">🧨</view>

        <!-- 主福字 -->
        <view class="fu-square">
          <view class="fu-square-border"></view>
          <view class="fu-character">福</view>
        </view>

        <!-- 春字对联 -->
        <view class="chun-char-top">春</view>
        <view class="chun-char-bottom">节</view>

        <!-- 灯笼装饰 -->
        <view class="lantern-decoration lantern-1">🏮</view>
        <view class="lantern-decoration lantern-2">🏮</view>

        <!-- 花纹装饰 -->
        <view class="pattern pattern-1"></view>
        <view class="pattern pattern-2"></view>
        <view class="pattern pattern-3"></view>
        <view class="pattern pattern-4"></view>
      </view>
    </view>
  </view>

  <!-- 功能入口 -->
  <view class="features">
    <view class="features__title">春节攻略</view>
    <view class="features__grid">
      <view class="feature-card" bindtap="goToRedpack">
        <view class="card-decoration">福</view>
        <view class="icon-wrapper">
          <view class="icon-bg"></view>
          <view class="feature-card__icon feature-card__icon--redpack">🧧</view>
        </view>
        <view class="feature-card__title">红包攻略</view>
        <view class="feature-card__desc">各平台红包活动</view>
        <view class="feature-card__badge" wx:if="{{redpackCount > 0}}">{{redpackCount}}个活动</view>
      </view>

      <view class="feature-card" bindtap="goToGala">
        <view class="card-decoration">春</view>
        <view class="icon-wrapper">
          <view class="icon-bg"></view>
          <view class="feature-card__icon feature-card__icon--gala">🎭</view>
        </view>
        <view class="feature-card__title">春晚节目单</view>
        <view class="feature-card__desc">各地春晚精彩节目</view>
        <view class="feature-card__badge" wx:if="{{galaCount > 0}}">{{galaCount}}台春晚</view>
      </view>

      <view class="feature-card" bindtap="goToToolbox">
        <view class="card-decoration">福</view>
        <view class="icon-wrapper">
          <view class="icon-bg"></view>
          <view class="feature-card__icon feature-card__icon--toolbox">🧰</view>
        </view>
        <view class="feature-card__title">百宝箱</view>
        <view class="feature-card__desc">实用工具大全</view>
        <view class="feature-card__badge">4个工具</view>
      </view>

      <view class="feature-card" bindtap="goToEmoticon">
        <view class="card-decoration">乐</view>
        <view class="icon-wrapper">
          <view class="icon-bg"></view>
          <view class="feature-card__icon feature-card__icon--emoticon">😄</view>
        </view>
        <view class="feature-card__title">表情包</view>
        <view class="feature-card__desc">马年专属表情</view>
        <view class="feature-card__badge" wx:if="{{emoticonCount > 0}}">{{emoticonCount}}个表情</view>
      </view>
    </view>
  </view>

  <!-- 广告位 -->
  <view class="ad-banner">
    <view class="ad-placeholder">
      <text class="ad-icon">📢</text>
      <text class="ad-text">广告位招租</text>
      <text class="ad-desc">优质流量 精准触达</text>
    </view>
  </view>

  <!-- 春节小知识 -->
  <view class="tips">
    <view class="tips__title">春节小知识</view>
    <view class="tips__content">
      <view class="tip-item" wx:for="{{tips}}" wx:key="index">
        <text class="tip-item__icon">💡</text>
        <text class="tip-item__text">{{item}}</text>
      </view>
    </view>
  </view>
</view>
