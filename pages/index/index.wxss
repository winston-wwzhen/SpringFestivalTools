/* pages/index/index.wxss */

.page {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 头部区域 - 优化渐变与质感 */
/* 头部区域 - 优化渐变与质感 */
.header {
  position: relative;
  overflow: hidden;
  /* 增加顶部内边距以适配状态栏 (假设状态栏~44px + 胶囊~44px) */
  padding: 180rpx 40rpx 100rpx 40rpx; 
  background: linear-gradient(135deg, #B71C1C 0%, #D32F2F 50%, #FF5252 100%);
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  box-shadow: 0 10rpx 40rpx rgba(211, 47, 47, 0.25);
  margin-bottom: 20rpx;
}

/* 背景装饰层 */
.header__bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}

.bg-circle--1 {
  width: 500rpx;
  height: 500rpx;
  top: -100rpx;
  right: -100rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.bg-circle--2 {
  width: 400rpx;
  height: 400rpx;
  bottom: -150rpx;
  left: -80rpx;
  background: radial-gradient(circle, rgba(255, 224, 178, 0.15) 0%, transparent 60%);
}

.bg-circle--3 {
  width: 120rpx;
  height: 120rpx;
  top: 20%;
  left: 20%;
  background: rgba(255,255,255,0.05);
  filter: blur(20rpx);
}

/* 噪点纹理 - 增加高级感 */
.bg-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.15;
  background-image: radial-gradient(#fff 1px, transparent 1px);
  background-size: 30rpx 30rpx;
}

.header__content {
  position: relative;
  z-index: 2;
}

/* 顶部问候 */
.header__top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.greeting-text {
  font-size: 60rpx;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.year-badge {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(16rpx);
  padding: 10rpx 28rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #FFECB3; /* 金色字体 */
  border: 2rpx solid rgba(255, 236, 179, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 倒计时 */
.countdown {
  color: #fff;
  margin-bottom: 32rpx;
}

.countdown__label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
  letter-spacing: 1rpx;
}

.countdown__row {
  display: flex;
  align-items: baseline;
}

.countdown__days {
  font-family: 'DIN Alternate', 'Helvetica Neue', sans-serif; /* 数字字体优化 */
  font-size: 100rpx;
  font-weight: 900;
  line-height: 0.9;
  background: linear-gradient(to bottom, #fff, #FFECB3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-right: 12rpx;
  text-shadow: 0 4rpx 20rpx rgba(0,0,0,0.15); /* 用于增强可读性的后备阴影 */
}

.countdown__unit {
  font-size: 32rpx;
  opacity: 0.9;
  font-weight: 500;
}

/* 提示气泡 */
.header__tip {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.15);
  padding: 12rpx 28rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.tip-icon { font-size: 28rpx; margin-right: 10rpx; }
.tip-text { font-size: 24rpx; color: rgba(255,255,255,0.9); }


/* 功能入口 - 卡片上浮效果 */
.features {
  margin-top: -60rpx;
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
}

.features__title {
  display: none; /* 隐藏标题，直接展示卡片更简洁 */
}

.features__grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-card {
  position: relative;
  background: #fff;
  border-radius: 28rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  overflow: hidden;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.feature-card:active {
  transform: scale(0.98);
}

/* 装饰大字背景 */
.feature-card::after {
  content: '福'; /* 默认 */
  position: absolute;
  right: -10rpx;
  bottom: -10rpx;
  font-size: 120rpx;
  color: var(--primary-color);
  opacity: 0.03;
  font-weight: 900;
  pointer-events: none;
  font-family: "KaiTi", serif;
}
/* 卡片单独的装饰字 */
.feature-card:nth-child(2)::after { content: '春'; }
.feature-card:nth-child(3)::after { content: '家'; }
.feature-card:nth-child(4)::after { content: '乐'; }

.feature-card__icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 6rpx rgba(0,0,0,0.1));
}

.feature-card__title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.feature-card__desc {
  font-size: 24rpx;
  color: var(--text-light);
  line-height: 1.3;
}

.feature-card__badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #FF6B6B, #E63946);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 20rpx;
  font-weight: 600;
  box-shadow: -2rpx 2rpx 8rpx rgba(230, 57, 70, 0.2);
}


/* 每日精选 */
.daily {
  padding: 56rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-header__title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-primary);
  position: relative;
  padding-left: 24rpx;
}

.section-header__title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

.section-header__more {
  font-size: 26rpx;
  color: var(--text-light);
  background: #f0f0f0;
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
}

.daily-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* 卡片间距 */
}

.daily-item {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.daily-item:active {
  transform: scale(0.99);
}

.daily-item__icon {
  width: 100rpx;
  height: 100rpx;
  background: #FFF8E1; /* 淡金色背景 */
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
}

.daily-item__content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.daily-item__title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.daily-item__desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.daily-item__meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.daily-item__meta .tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}
.tag--news { background: #E3F2FD; color: #1976D2; }
.tag--guide { background: #E8F5E9; color: #388E3C; }
.tag--activity { background: #FFF3E0; color: #F57C00; }

.daily-item__meta .time {
  font-size: 22rpx;
  color: var(--text-light);
}


/* 春节小知识 - 卡片化 */
.tips {
  padding: 0 32rpx 64rpx;
}

.tips__content {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.tip-item {
  display: flex;
  margin-bottom: 32rpx;
}
.tip-item:last-child { margin-bottom: 0; }

.tip-item__icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  background: #F5F7FA;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tip-item__text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  padding-top: 10rpx;
}
