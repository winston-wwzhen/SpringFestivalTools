/* pages/index/index.wxss */

.page {
  min-height: 100vh;
  background: var(--bg-color);
}

/* 头部区域 */
.header {
  position: relative;
  overflow: hidden;
  padding: 48rpx 32rpx 80rpx;
  background: linear-gradient(135deg, #E63946 0%, #F4A261 100%);
}

.header__bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="3" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="70" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
  background-size: 100rpx;
}

.header__content {
  position: relative;
  z-index: 1;
}

.greeting {
  font-size: 52rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 32rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.countdown {
  display: flex;
  align-items: baseline;
  color: #FFFFFF;
}

.countdown__label {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.countdown__days {
  font-size: 88rpx;
  font-weight: 700;
  line-height: 1;
  margin: 0 12rpx;
}

.countdown__unit {
  font-size: 32rpx;
}

/* 功能入口 */
.features {
  margin-top: -48rpx;
  padding: 0 32rpx;
}

.features__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.features__grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-card {
  position: relative;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: 40rpx 32rpx;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.feature-card__icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.feature-card__icon--redpack { filter: drop-shadow(0 4rpx 8rpx rgba(230, 57, 70, 0.3)); }
.feature-card__icon--gala { filter: drop-shadow(0 4rpx 8rpx rgba(244, 162, 97, 0.3)); }
.feature-card__icon--kinship { filter: drop-shadow(0 4rpx 8rpx rgba(42, 157, 143, 0.3)); }
.feature-card__icon--emoticon { filter: drop-shadow(0 4rpx 8rpx rgba(230, 57, 70, 0.3)); }

.feature-card__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.feature-card__desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.feature-card__badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

/* 每日精选 */
.daily {
  padding: 48rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-header__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-header__more {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
}

.section-header__more .icon {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.daily-list {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.daily-item {
  display: flex;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.2s ease;
}

.daily-item:last-child {
  border-bottom: none;
}

.daily-item:active {
  background: var(--bg-color);
}

.daily-item__icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.daily-item__content {
  flex: 1;
  min-width: 0;
}

.daily-item__title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.daily-item__desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.daily-item__meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.daily-item__meta .tag {
  font-size: 20rpx;
}

.daily-item__meta .time {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 春节小知识 */
.tips {
  padding: 0 32rpx 48rpx;
}

.tips__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.tips__content {
  background: linear-gradient(135deg, rgba(230, 57, 70, 0.05) 0%, rgba(244, 162, 97, 0.05) 100%);
  border-radius: var(--radius-lg);
  padding: 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-item__icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tip-item__text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
