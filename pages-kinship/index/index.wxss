/* pages-kinship/index/index.wxss */
.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #2A9D8F, #264653);
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  color: #fff;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  margin-top: -40rpx;
}

.action-card {
  flex: 1;
  background: #fff;
  border-radius: var(--radius-lg);
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: var(--shadow-md);
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 区块 */
.section {
  margin: 32rpx;
  background: #fff;
  border-radius: var(--radius-md);
  padding: 32rpx;
  box-shadow: var(--shadow-sm);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  font-size: 26rpx;
  color: var(--text-light);
}

/* 关系列表 */
.relation-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.relation-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: var(--radius-md);
}

.relation-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.relation-info {
  flex: 1;
}

.relation-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.relation-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.relation-arrow {
  font-size: 40rpx;
  color: var(--text-light);
}

/* 热门搜索 */
.hot-search {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.search-tag {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, rgba(42, 157, 143, 0.1), rgba(42, 157, 143, 0.05));
  border-radius: 48rpx;
  font-size: 26rpx;
  color: var(--accent-color);
}

/* 提示 */
.tips {
  margin: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(244, 162, 97, 0.1), rgba(230, 57, 70, 0.1));
  border-radius: var(--radius-md);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-item {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
