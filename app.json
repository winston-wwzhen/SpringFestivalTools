{
  "usingComponents": {
    "nav-bar": "/components/nav-bar/nav-bar",
    "skeleton": "/components/skeleton/skeleton",
    "empty-state": "/components/empty-state/empty-state",
    "error-state": "/components/error-state/error-state"
  },
  "pages": [
    "pages/index/index",
    "pages/redpack/list/index",
    "pages/redpack/detail/index",
    "pages/gala/platforms/index",
    "pages/gala/programs/index",
    "pages/toolbox/index/index"
  ],
  "subpackages": [
    {
      "root": "pages-toolbox-sub",
      "name": "toolbox-sub",
      "pages": [
        "pages/toolbox/kinship/index",
        "pages/toolbox/fortune/index",
        "pages/toolbox/blessing/index",
        "pages/toolbox/simulator/index"
      ]
    }
  ],
  "preloadRule": {
    "pages/toolbox/index/index": {
      "network": "all",
      "packages": ["toolbox-sub"]
    }
  },
  "window": {
    "navigationStyle": "custom",
    "backgroundColor": "#F5F7FA",
    "backgroundTextStyle": "dark"
  },
  "tabBar": {
    "color": "#666666",
    "selectedColor": "#D32F2F",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/tabbar/home.png",
        "selectedIconPath": "images/tabbar/home-active.png"
      },
      {
        "pagePath": "pages/redpack/list/index",
        "text": "红包攻略",
        "iconPath": "images/tabbar/redpack.png",
        "selectedIconPath": "images/tabbar/redpack-active.png"
      },
      {
        "pagePath": "pages/gala/platforms/index",
        "text": "春晚",
        "iconPath": "images/tabbar/gala.png",
        "selectedIconPath": "images/tabbar/gala-active.png"
      },
      {
        "pagePath": "pages/toolbox/index/index",
        "text": "百宝箱",
        "iconPath": "images/tabbar/toolbox.png",
        "selectedIconPath": "images/tabbar/toolbox-active.png"
      }
    ]
  },
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于推荐本地春晚信息"
    }
  },
  "requiredBackgroundModes": ["audio"],
  "sitemapLocation": "sitemap.json",
  "style": "v2",
  "lazyCodeLoading": "requiredComponents"
}
